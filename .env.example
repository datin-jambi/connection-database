# ==============================================
# PostgreSQL Database Gateway - Configuration
# ==============================================

# Server
PORT=3000
NODE_ENV=production

# VPN Configuration (PPTP)
VPN_SERVER=vpn.example.com
VPN_USERNAME=your_vpn_username
VPN_PASSWORD=your_vpn_password

# Database Configuration
DB_HOST=192.168.0.3
DB_PORT=5432
DB_NAME=your_database
DB_USER=your_username
DB_PASSWORD=your_password
DB_MAX_CONNECTIONS=20

# Security - CORS Whitelist (comma-separated)
ALLOWED_ORIGINS=http://localhost:3001,https://chatbot.example.com

# Security - API Keys (comma-separated, optional)
API_KEYS=

# Rate Limiting
RATE_LIMIT_WINDOW=15          # minutes
RATE_LIMIT_MAX_REQUESTS=100   # max requests per window

